@using System.Collections;
@using EducationCenterCRM.DAL.Entities;
@using EducationCenterCRM.PresentationLayer.Models;
@model IEnumerable<object>

@{
    ViewData["Title"] = "Education database";
    Layout = "_Layout";
    int id = 0;
}

<button id="add_new_button"  name="add_new_button" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#FullInfo">Add New</button>
@if (Model.Count() != 0)
{

    <table class="table table-striped" id="mainInfoTable">
        <thead>
            <tr>
                @foreach (var property in @Model.FirstOrDefault()?.GetType()?.GetProperties())
                {
                    <th> @property?.Name</th>
                }
                <th></th>
            </tr>

        </thead>


        @foreach (var obj in @Model)
        {
            <tr>
                @foreach (var property in @Model.FirstOrDefault()?.GetType()?.GetProperties())
                {
                    <td>@property?.GetValue(obj)</td>
                    @if (property?.Name == "Id")
                    {
                        id = (int)(property?.GetValue(obj));
                    }

                }
                <td>
                    <nav class="navbar-light">
                        <ul class="nav">
                            <li class="nav-item">
                                <button id="info_button"  value=@id name="info_button" type="button"  class="btn btn-warning navbar-toggler" data-bs-toggle="modal" data-bs-target="#FullInfo">Info</button>
                            </li>
                            <li class="nav-item">
                                <button id="edit_button" value=@id name="info_button" type="button" class="btn btn-warning navbar-toggler" data-bs-toggle="modal" data-bs-target="#FullInfo">Edit</button>
                            </li>
                            <li class="nav-item">
                                <form asp-action="delete" method="post">
                                    <input type="hidden" value=@id name="id" />
                                    <button type="submit" class="btn btn-danger navbar-toggler">Delete</button>
                                </form>
                            </li>
                        </ul>
                    </nav>
                </td>
            </tr>
        }



    </table>
}


<div class="modal fade " id="FullInfo" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header" >
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="modal_close_button"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col" id="Info_body"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



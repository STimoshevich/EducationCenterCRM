@using EducationCenterCRM.Services.BLL;
@using EducationCenterCRM.DAL.Entities
@inject GroupService groupService
@model Student

<div class="container">
    <div class="row">
 
        <h1>Student info:</h1>
        <form id="StudentInfoForm">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.Id)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.Id)" aria-describedby="basic-addon1" value="@Model.Id" readonly>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.Name)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.Name)" aria-describedby="basic-addon1" value="@Model.Name">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.Lastname)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.Lastname)" aria-describedby="basic-addon1" value="@Model.Lastname">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.BirthDate)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.BirthDate)" aria-describedby="basic-addon1" value="@Model.BirthDate.ToString("d")">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.Email)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.Email)" aria-describedby="basic-addon1" value="@Model.Email">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@nameof(@Model.Phone)</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="@nameof(@Model.Phone)" aria-describedby="basic-addon1" value="@Model.Phone">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="SelectEducationType">EducationType</label>
                <select class="form-select" id="SelectEducationType" asp-for="Type">
                    @foreach (var EducatinType in Enum.GetValues(@Model.Type.GetType()))
                    {
                    <option value="@((int)EducatinType)">@EducatinType</option>
                    }
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="selector_1">Group</label>
                <select class="form-select" id="selector_1" asp-for="GroupId">
                     <option value="">@null</option>
                    @foreach (var group in groupService.GetAll())
                    {
                        <option value="@group.Id">@group.Title</option>
                    }
                </select>
            </div>
            <div class="input-group mb-3">
                <button id="_save_changes" type="button" onclick="updateByForm('StudentInfoForm')"  class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>

    </div>

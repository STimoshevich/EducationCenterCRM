@using EducationCenterCRM.DAL.Entities;
@model Group


<h1>Group info:</h1>
<div class="mb-3">

    <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">@nameof(@Model.Id)</div>
                @Model.Id
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">@nameof(@Model.Title)</div>
                @Model.Title
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">@nameof(@Model.StartDate)</div>
                @Model.StartDate.ToString("d")
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">@nameof(@Model.Status)</div>
                @Model.Status
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">Teacher name</div>
                @Model.Teacher?.Name @Model.Teacher?.Lastname
            </div>
        </li>
    </ul>
</div>

<h3>Students:</h3>
<div class="mb-3">
<ul class="list-group list-group-flush">
    @foreach (var student in Model.Students)
    {
            <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                @student?.Name @student?.Lastname
            </div>
        </li>
    }
</ul>
</div>


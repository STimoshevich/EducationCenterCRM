@using EducationCenterCRM.DAL.Entities;
@using EducationCenterCRM.Services.BLL
@inject TeacherService teacherService
@model Group

<div class="container">
    <div class="row">
        <h1>Group Info:</h1>
        <form id="GroupInfoForm">
            <div class="input-group mb-3">
                <label asp-for="Id" class="input-group-text"></label>
                <input asp-for="Id" class="form-control">
                <span class="text-danger field-validation-error form-text" asp-validation-for="Id"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Title" class="input-group-text"></label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger field-validation-error" asp-validation-for="Title"></span>

            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="SelectStatys">Status</label>
                <select class="form-select" id="SelectStatys" asp-for="Status">
                    @foreach (var groupStatus in Enum.GetValues(@Model.Status.GetType()))
                    {
                        <option value="@((int)groupStatus)">@groupStatus</option>
                    }
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="selector_1">Teacher</label>
                <select class="form-select" id="selector_1" asp-for="TeacherId">
                    <option value="@null">Not set</option>
                    @foreach (var teacher in teacherService.GetAll())
                    {
                        <option value="@teacher?.Id">@teacher?.Name @teacher?.Lastname</option>
                    }

                </select>
            </div>
        </form>


        <div class="input-group mb-3">
            <button id="_save_changes" type="button" onclick="updateByForm('GroupInfoForm')" class="btn btn-primary">Save changes</button>
        </div>

    </div>

</div>


